  <%= simple_form_for(@tiny_house) do |f| %>
    <%= f.input :title %>
    <%= f.input :description, as: :text, placeholder: 'Dexcribe your Tiny' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :location, placeholder: 'add Tiny address' %>
    <%= f.input :travellers_number %>
    <%= f.input :bed_number %>
    <%= f.input :bedroom_number %>
    <%= f.input :kitchen, as: :radio_buttons %>
    <%= f.input :wifi, as: :radio_buttons %>
    <%= f.input :sauna, as: :radio_buttons %>
    <%= f.input :price %>
    <%= f.hint 'price per night' %>
    <%= f.button :submit %>
  <% end %>
